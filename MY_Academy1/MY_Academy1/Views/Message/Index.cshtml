@model List<MY_Academy1.Models.Tbl_Messages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Index</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad </th>
            <th>Email</th>
            <th>Konu</th>
            <th>Mesajı Aç</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td><a href="/Message/Detaylar/@item.MessageId" type="button" class="btn btn-outline-info"> Detaylar</a></td>

            </tr>

        }
    </tbody>



</table>
<br />
<a href="/Message/MesajıOku" type="button" class="btn btn-outline-success"> Mesajı Oku</a>